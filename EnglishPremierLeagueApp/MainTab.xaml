<UserControl x:Class="EnglishPremierLeagueApp.MainTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishPremierLeagueApp"
             mc:Ignorable="d" Width="400" Height="445">
    <Grid Background="White">
        <ComboBox x:Name="SeasonsComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="10,10,0,0"/>
        <DataGrid x:Name="Table" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Height="Auto" ColumnWidth="Auto" AutoGenerateColumns="True"/>
        <DataGrid x:Name="Scoreboard" HorizontalAlignment="Left" Margin="359,49,0,0" VerticalAlignment="Top" Height="Auto" Width="Auto" AutoGenerateColumns="True"/>

    </Grid>
</UserControl>
    
